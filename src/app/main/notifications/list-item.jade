div.notification-list-item.row
  .col-xs-1
    avatar(user="nli.notification.$user")
  .col-xs-10
    a(ui-sref="profile({userId: nli.notificatin.actorId})") {{ ::nli.getActorName() }}
    | {{ ::nli.getActionName() }}
    a(ui-sref="nail-view({nailId: nli.notification.data.nailId})", ng-click="nli.markRead()")
      | {{ ::nli.notification.data.text }}
  .col-xs-1
    i.icon.type(ng-class="::nli.getIcon()")
