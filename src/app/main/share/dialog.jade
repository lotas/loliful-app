.modal.share-dialog(tabindex='-1', role='dialog', aria-hidden='true')
  .modal-dialog
    .modal-content
      .modal-header
        button.close(type='button', aria-label='Close', ng-click='$hide()')
          span(aria-hidden='true') Ã—
        h4.modal-title {{ share ? 'Share this joke' : 'Just a moment, generating joke' }}
      div(ng-bind='content')
      .modal-body
        .loading(ng-if="!share")
          .rocket
        img(ng-if="share", ng-src="{{share.img}}", style="width:98%")
      .modal-footer(ng-if="share")
        div.social
          a.btn.btn-primary.share-f(
          rel="nofollow",
          href='https://www.facebook.com/sharer/sharer.php?u={{share.url}}',
          onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;")
            i.icon.icon-loliful-icon-facebook(title='Share on Facebook')
          a.btn.btn-primary.share-t(
          rel="nofollow",
          href='https://twitter.com/intent/tweet?text={{share.url}}&via=loliful_app&hashtags=loliful',
          onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;")
            i.icon.icon-loliful-icon-twitter(title='Share on Twitter')
          a.btn.btn-primary.share-w(
          ng-if="screen.isTabletOrMobile",
          rel="nofollow",
          href='whatsapp://send?text={{share.url}}',
          data-action="share/whatsapp/share")
            i.icon.icon-loliful-icon-whatsapp(title='Share on Whatsapp')
          a.btn.btn-primary.share-v(
          ng-if="screen.isTabletOrMobile",
          rel="nofollow",
          href='viber://forward?text={{share.url}}')
            img(src="/assets/img/share-v.svg", title="Share on Viber")
          a.btn.btn-primary.share-g(
          rel="nofollow",
          href='https://plus.google.com/share?url={{share.url}}',
          onclick="javascript:window.open(this.href, '', 'menubar=no,toolbar=no,resizable=yes,scrollbars=yes,height=600,width=600');return false;")
            i.icon.icon-loliful-icon-google-plus(title='Share on Google+')
        div.align-center.copy-row.vOfs
          a.btn.btn-link(
            href="{{ share.img }}",
            download
          )
            span Download
          a.btn.btn-link(
            ngclipboard,
            data-clipboard-text="{{ share.url }}",
            ng-href="{{ share.url }}"
          )
            span(
              bs-tooltip,
              data-title="Copied to clipboard",
              data-trigger="click"
            ) Copy card url
