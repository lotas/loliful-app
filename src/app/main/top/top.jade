float-menu(single="true")

loading(ng-if="!vm.jokes.length")

.container
  .row
    .col-sm-6
      ul.nav.nav-pills
        li
          a(ui-sref="top({period:'day'})") Today
        li
          a(ui-sref="top({period:'week'})") Week
        li
          a(ui-sref="top({period:'month'})") Month
        li
          a(ui-sref="top({period:''})") All time


div.top(ng-if="vm.jokes",infinite-scroll="screen.isPhone && vm.loadMore()" infinite-scroll-distance="3")
  joke-list-item(joke="item", ng-repeat="item in vm.jokes track by $index")

button.load-more.btn.btn-block.btn-lg(ng-click="vm.loadMore()", ng-hide="screen.isPhone") Show more

